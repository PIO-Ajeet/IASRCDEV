 IAV_LIB       TEXT IS 'SOURCE LIBRARY',
 IAV_IFSLOC    TEXT IS 'IFS LOCATION' ,                                                  --0001
 IAV_VAR       TEXT IS 'PROGRAM FIELD',
 IAV_RRN       TEXT IS 'LINE NUMBER',                                                    --HJ02
 IAV_TYP       TEXT IS 'TYPE OF VAR',
 IAV_OFLD      TEXT IS 'EXTERNAL FIELD',
 IAV_FILE      TEXT IS 'FILE NAME',
 IAV_PRCNM     TEXT IS 'PROCEDURE NAME',
 IAV_DTYP      TEXT IS 'DATA TYPE',
 IAV_LEN       TEXT IS 'LENGTH',
 IAV_DEC       TEXT IS 'DECIMAL PLACES',
 IAV_DIM       TEXT IS 'DIM',
 IAV_DATF      TEXT IS 'DATE FORMAT',
 IAV_KWDNM     TEXT IS 'KEYWORDS NAME',
 IAV_KWVAL     TEXT IS 'KEYWORDS VALUE',
 IAV_SEQNUM    TEXT IS 'SEQUENCE NUMBER',                                                --HJ01
 IAV_KEYWRD    TEXT IS 'ENTIRE KEYWORD',
 IAV_TEXT      TEXT IS 'FIELD DESCRIPTION',
 CRTJOBID      TEXT IS 'CREATE JOB ID',
