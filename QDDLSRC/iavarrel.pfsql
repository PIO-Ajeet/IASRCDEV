CREATE OR REPLACE TABLE IAVARREL(

 IACPGMREF_PK      FOR COLUMN CMDID       INT GENERATED BY DEFAULT AS IDENTITY,
 LIBRARY_NAME      FOR COLUMN RESRCLIB    CHAR(10)  NOT NULL WITH DEFAULT ' ',
 SRC_PF_NAME       FOR COLUMN RESRCFLN    CHAR(10)  NOT NULL WITH DEFAULT ' ',
 MEMBER_NAME       FOR COLUMN REPGMNM     CHAR(10)  NOT NULL WITH DEFAULT ' ',
 IFS_LOCATION      FOR COLUMN REIFSLOC    CHAR(100) NOT NULL WITH DEFAULT ' ',            --0001
 SEQUENCE_NBR      FOR COLUMN RESEQ       DECIMAL(6,0)  NOT NULL WITH DEFAULT 0,
 SOURCE_RRN        FOR COLUMN RERRN       DECIMAL(6,0)  NOT NULL WITH DEFAULT 0,
 ROUTINE_NAME      FOR COLUMN REROUTINE   CHAR(80)  NOT NULL WITH DEFAULT ' ',
 RELN_TYPE         FOR COLUMN RERELTYP    CHAR(10)  NOT NULL WITH DEFAULT ' ',
 RELN_NO           FOR COLUMN RERELNUM    CHAR(10)  NOT NULL WITH DEFAULT ' ',
 OPCODE_NAME       FOR COLUMN REOPC       CHAR(10)  NOT NULL WITH DEFAULT ' ',
 RESULT_VAL        FOR COLUMN RERESULT    CHAR(50)  NOT NULL WITH DEFAULT ' ',
 BIF               FOR COLUMN REBIF       CHAR(10)  NOT NULL WITH DEFAULT ' ',
 FACTOR1_VAL       FOR COLUMN REFACT1     CHAR(80)  NOT NULL WITH DEFAULT ' ',
 COMPARE_OPER      FOR COLUMN RECOMP      CHAR(10)  NOT NULL WITH DEFAULT ' ',
 FACTOR2_VAL       FOR COLUMN REFACT2     CHAR(80)  NOT NULL WITH DEFAULT ' ',
 CONTN_OPER        FOR COLUMN RECONTIN    CHAR(10)  NOT NULL WITH DEFAULT ' ',
 RESULT_IND        FOR COLUMN RERESIND    CHAR(6)   NOT NULL WITH DEFAULT ' ',
 CATEGORY_1        FOR COLUMN RECAT1      CHAR(1)  NOT NULL WITH DEFAULT ' ',
 CATEGORY_2        FOR COLUMN RECAT2      CHAR(1)  NOT NULL WITH DEFAULT ' ',
 CATEGORY_3        FOR COLUMN RECAT3      CHAR(1)  NOT NULL WITH DEFAULT ' ',
 CATEGORY_4        FOR COLUMN RECAT4      CHAR(1)  NOT NULL WITH DEFAULT ' ',
 CATEGORY_5        FOR COLUMN RECAT5      CHAR(1)  NOT NULL WITH DEFAULT ' ',
 CATEGORY_6        FOR COLUMN RECAT6      CHAR(1)  NOT NULL WITH DEFAULT ' ',
 UTILITY_FLD       FOR COLUMN REUTIL      CHAR(10)  NOT NULL WITH DEFAULT ' ',
 RULE_NO_1         FOR COLUMN RENUM1      DECIMAL(5,0) NOT NULL WITH DEFAULT 0,
 RULE_NO_2         FOR COLUMN RENUM2      DECIMAL(5,0) NOT NULL WITH DEFAULT 0,
 RULE_NO_3         FOR COLUMN RENUM3      DECIMAL(5,0) NOT NULL WITH DEFAULT 0,
 RULE_NO_4         FOR COLUMN RENUM4      DECIMAL(5,0) NOT NULL WITH DEFAULT 0,
 RULE_NO_5         FOR COLUMN RENUM5      DECIMAL(5,0) NOT NULL WITH DEFAULT 0,
 RULE_NO_6         FOR COLUMN RENUM6      DECIMAL(5,0) NOT NULL WITH DEFAULT 0,
 RULE_NO_7         FOR COLUMN RENUM7      DECIMAL(5,0) NOT NULL WITH DEFAULT 0,
 RULE_NO_8         FOR COLUMN RENUM8      DECIMAL(5,0) NOT NULL WITH DEFAULT 0,
 RULE_NO_9         FOR COLUMN RENUM9      DECIMAL(5,0) NOT NULL WITH DEFAULT 0,
 EXCLUDED          FOR COLUMN REEXC       CHAR(1)  NOT NULL WITH DEFAULT ' ',
 INCLUDED          FOR COLUMN REINC       CHAR(1)  NOT NULL WITH DEFAULT ' ',
 CREATE_JOBID      FOR COLUMN CRTJOBID    CHAR(10) NOT NULL
                                          WITH DEFAULT 'USER JOB',
 CRT_TIMESTAM      FOR COLUMN CRTONTS     TIMESTAMP NOT NULL DEFAULT
                                          CURRENT TIMESTAMP,
 CHANGE_JOBID      FOR COLUMN CHGJOBID    CHAR(10) NOT NULL
                                          WITH DEFAULT 'USER JOB',
 CHG_TIMESTAM      FOR COLUMN CHGONTS     TIMESTAMP NOT NULL FOR EACH ROW
                                          ON UPDATE AS ROW CHANGE TIMESTAMP,

PRIMARY KEY (CMDID))
RCDFMT IAVARRELR;

LABEL ON TABLE IAVARREL IS 'IA VARIABLE RELATIONS TABLE';

LABEL ON COLUMN IAVARREL(
 CMDID       IS 'IDENTITY            COLUMN',
 RESRCLIB    IS 'LIBRARY             NAME',
